head
  title Ceneoid
  meta(http-equiv='X-UA-Compatible', content='IE=edge')    
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(href='font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
  link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
  link(href='http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic', rel='stylesheet', type='text/css')

body
  div#page-top.index
    // Navigation
    nav.navbar.navbar-default
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            |                     
            span.icon-bar
            |                     
            span.icon-bar
            |                     
            span.icon-bar
          |                 
          a.navbar-brand(href='#page-top') Ceneoid
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.hidden
              a(href='#page-top')
            |                     
            li.page-scroll
              a(href='#portfolio') Portfolio
            |                     
            li.page-scroll
              a(href='#about') About
            |                     
            li.page-scroll
              a(href='#contact') Contact

    header
      .container
        .row
          .col-lg-12
            .intro-text
              span.name Vallkomen till Ceneoid
              |                         
              hr.star-light
              |                         
              form#contactForm(name='sentMessage', novalidate='')
                .row.control-group
                  .form-group.col-xs-12.controls
                    input#name.form-control(type='text', placeholder='Ex. Volkswagen Golf')

    section#portfolio
      .container
        .row
          .col-lg-12.text-center
            h2 Categories
            |                     
            hr.star-primary
        |             
