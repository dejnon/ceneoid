template(name="addretailer")
  .row
    .col-lg-12.text-center
      h2 Add new retailer!          
      hr.star-light

  .highlight
    form.form-inline.form-create
      .form-group
        label(for='inputname')
        input#inputname.form-control(
          name='name',
          type='text', 
          placeholder='retailer name')
    
      button.btn.btn-success(type="submit") 
        .glyphicon.glyphicon-plus ADD RETAILER




  
