template(name="addproduct")
  .row
    .col-lg-12.text-center
      h2 Add new product!          
      hr.star-light

  .highlight
    form.form-inline
      .form-group
        label('name')
        input#inputname.form-control(type='text', placeholder='product name')

      .form-group              
        select.form-control(placeholder='choose category')
          each categories
            option #{name}
    
      button.btn.btn-success(type="submit") 
        .glyphicon.glyphicon-plus ADD PRODUCT

      .form-group
        input#photo.btn(type='file')



  
